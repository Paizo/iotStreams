<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [API,%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="WARN"/>
    <logger name="org.springframework.data.mongodb" level="DEBUG"/>
    <!--<logger name="org.springframework.data.mongodb.core.MongoTemplate" level="DEBUG"/>-->
    <logger name="com.paizo.monitorapi" level="trace"/>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>
</configuration>